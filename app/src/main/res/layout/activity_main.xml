<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background"

                >
            <LinearLayout
                android:id="@+id/layoutRecruiter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#74F3EFEF"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/recruiter"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/txt_recruiter"
                    />

                <TextView
                    android:id="@+id/txt_recruiter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recruiter"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background"

                >
                <LinearLayout
                    android:id="@+id/layoutApplicant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#74F3EFEF"
                    android:gravity="center"

                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/applicant"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/txt_applicant"
                        />

                    <TextView
                        android:id="@+id/txt_applicant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Applicant"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>